{
    "manifest_version": 3,
    "name": "Image Reference Copy",
    "version": "1.0",
    "description": "Copy images with their reference links for Figma integration.",
    "permissions": ["contextMenus", "clipboardWrite", "activeTab", "scripting", "notifications", "tabs", "management"],
    "background": {
      "service_worker": "background.js"
    },
    "content_scripts": [{
      "matches": ["<all_urls>"],
      "js": ["content_script.js"]
    }],
    "action": {
      "default_popup": "popup.html",
      "default_title": "Image Reference Copy"
    },
    "icons": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  }
  